# Brain Sidecar - Fina Ergen
# GESTIÃ“N AUTOMÃTICA DE ENTORNO VIRTUAL Y DEPENDENCIAS

# Directorio donde se encuentra este script
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

# Estrategia de bÃºsqueda de raÃ­z (Desarrollo vs ProducciÃ³n .deb/.rpm)
# 1. Desarrollo: ../../../ (desde binaries/)
# 2. ProducciÃ³n: ../ (desde binaries/ en /usr/lib/fina-ergen/)
# 3. ProducciÃ³n (Alternate): ../resources/
for root in "$SCRIPT_DIR/../../../" "$SCRIPT_DIR/../" "$SCRIPT_DIR/../resources/"; do
    IF_ROOT="$(realpath "$root" 2>/dev/null)"
    if [ -f "$IF_ROOT/main.py" ]; then
        ERGEN_ROOT="$IF_ROOT"
        ERGEN_MAIN="$ERGEN_ROOT/main.py"
        break
    fi
done

if [ -z "$ERGEN_ROOT" ]; then
    echo "âš ï¸ ADVERTENCIA: No se encontrÃ³ main.py en rutas estÃ¡ndar. Usando PWD." >&2
    ERGEN_ROOT="$(pwd)"
    ERGEN_MAIN="$ERGEN_ROOT/main.py"
fi

echo "ðŸ“‚ Root detectado: $ERGEN_ROOT" >&2

# UbicaciÃ³n del VENV (Priorizamos locales, luego globales)
PYTHON_BIN=""

# 1. Buscar en carpetas locales del proyecto [MODO DESARROLLO]
for venv_name in ".venv" "venv"; do
    if [ -f "$ERGEN_ROOT/$venv_name/bin/python3" ]; then
        PYTHON_BIN="$ERGEN_ROOT/$venv_name/bin/python3"
        echo "ðŸ Usando VENV local: $venv_name" >&2
        break
    fi
done

# 2. Si no hay local, buscar globales [MODO PRODUCCIÃ“N / USUARIO]
if [ -z "$PYTHON_BIN" ]; then
    if [ -f "$HOME/.venv/bin/python3" ]; then
        PYTHON_BIN="$HOME/.venv/bin/python3"
        echo "ðŸ Usando VENV global del HOME (~/.venv)" >&2
    elif [ -f "$HOME/.local/share/Fina/venv/bin/python3" ]; then
        PYTHON_BIN="$HOME/.local/share/Fina/venv/bin/python3"
        echo "ðŸ Usando VENV global de Fina (.local/share/Fina/venv)" >&2
    fi
fi

# --- INICIALIZACIÃ“N AUTOMÃTICA DEL ENTORNO ---
if [ ! -f "$PYTHON_BIN" ]; then
    echo "ðŸ› ï¸ Preparando entorno virtual por primera vez..." >&2
    
    # Verificar si python3 y venv estÃ¡n instalados
    if ! python3 -c "import venv" &>/dev/null; then
        echo "âŒ ERROR: El mÃ³dulo 'python3-venv' no estÃ¡ instalado." >&2
        echo "ðŸ’¡ Por favor, ejecuta: sudo apt install python3-venv (en Debian/Ubuntu/Mint)" >&2
        # Intentamos seguir con el python del sistema como Ãºltimo recurso
        PYTHON_BIN="$(which python3)"
    else
        mkdir -p "$(dirname "$USER_VENV")"
        python3 -m venv "$USER_VENV" || { echo "âŒ Error creando venv" >&2; exit 1; }
        PYTHON_BIN="$USER_VENV/bin/python3"
        
        # InstalaciÃ³n inicial de requerimientos
        if [ -f "$ERGEN_ROOT/requirements.txt" ]; then
            echo "ðŸ“¦ Instalando dependencias de Fina (esto puede tardar unos minutos)..." >&2
            "$PYTHON_BIN" -m pip install --upgrade pip &>/dev/null
            "$PYTHON_BIN" -m pip install -r "$ERGEN_ROOT/requirements.txt" || echo "âš ï¸ Algunos paquetes fallaron, se intentarÃ¡n cargar bajo demanda." >&2
        fi
    fi
fi

# Verificar si se necesitan nuevas dependencias (comparando fecha de requirements.txt)
# Solo si el directorio es escribible
if [ -w "$ERGEN_ROOT" ] && [ -f "$ERGEN_ROOT/requirements.txt" ]; then
    # Un check simple para no re-instalar siempre: si requirements es mas nuevo que el venv
    if [ "$ERGEN_ROOT/requirements.txt" -nt "$PYTHON_BIN" ]; then
        echo "ðŸ”„ Actualizando dependencias detectadas..." >&2
        "$PYTHON_BIN" -m pip install -r "$ERGEN_ROOT/requirements.txt"
        touch "$PYTHON_BIN" # Actualizar fecha del binario como marcador
    fi
fi

# Ejecutar desde el directorio de Ergen
cd "$ERGEN_ROOT"

# Asegurar que procesos antiguos mueran
pkill -f "fina_api.py"
pkill -f "$ERGEN_MAIN"
pkill -f "monitor_ergen.py"

echo "ðŸ”Œ [Brain Wrapper] Iniciando servicios core..." >&2
"$PYTHON_BIN" -u fina_api.py &

if [ -f "plugins/doorbell/monitor_ergen.py" ]; then
    "$PYTHON_BIN" -u plugins/doorbell/monitor_ergen.py &
fi

# Cleanup global at exit
cleanup() {
    echo "ðŸ›‘ [Brain Wrapper] Deteniendo procesos..." >&2
    pkill -P $$
}
trap cleanup EXIT INT TERM

echo "ðŸš€ [Brain Wrapper] Iniciando CEREBRO..." >&2
exec "$PYTHON_BIN" -u "$ERGEN_MAIN"
